{
  "compilerOptions": {
    "outDir": "../dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/ts/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
